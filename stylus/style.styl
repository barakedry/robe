@import 'nib';
@import './responsive-pixels'

global-reset();


color1 = #fcfae1
color2 = #b9121b
color3 = #4c1b1b
color4 = #f6e497
color5 = #bd8d46

body-color = color1

html
  font-size 16px

body
  background-color body-color
  color #000
  font-family 'Noto Sans', Arial, Verdana, sans-serif
  font-size 24px
  
a
  color color2
  text-decoration none
  border-bottom 1px solid color2
  &:hover
    background-color color2
    color body-color
    

pre[class*="language-"]
  display inline-block
  font-size 18px
  border-radius 10px
  padding 5px 15px
  margin 0

strong
  font-weight bold
  
em
  font-style italic

table
  background-color #fff
  border-collapse collapse
  margin 30px 0
  
  td, th
    padding 10px
  th
    border 2px solid #000
    font-weight bold
  td
    border 1px solid #000

main 
  width 70%
  padding 1em

  a#github
    display block
    margin 20px 0 40px

  section
    line-height 30px
    p
      margin 30px 0
      code
        font-family monospace
        font-size 30px
        margin 0 5px
        color color3
    ul
      margin 0 0 0 50px
      list-style disc

  h1, h2, h3
    font-family "Bree Serif", serif
    
  h2
    margin 40px 0
    font-size 35px
    font-weight bold
  h3
    margin 20px 0
    font-size 20px
    font-weight bold

  h1
    font-size 80px
    font-weight 400
    small 
      display block
      margin 10px 0 30px
      font-size 40px
      font-family "Helvetica Neue", "Open Sans", sans-serif
      font-weight 100
      color #666